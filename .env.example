# ==============================================
# Database Configuration (PostgreSQL)
# ==============================================
POSTGRES_USER=todo_user
POSTGRES_PASSWORD=todo_password
POSTGRES_DB=todo_db

# ==============================================
# Backend Configuration (Flask)
# ==============================================
# For Docker, use 'db' as hostname; for local development, use 'localhost'
DATABASE_URL=postgresql://todo_user:todo_password@db:5432/todo_db
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=your-secret-key-here-change-in-production

# ==============================================
# OpenAI API Configuration
# ==============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# ==============================================
# Frontend Configuration (Next.js)
# ==============================================
# For Docker, use container name; for local dev, use localhost
NEXT_PUBLIC_API_URL=http://localhost:5000/api
